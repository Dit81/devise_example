<h1>Acesso ao sistema</h1>
<%= warden.message if warden.message.present? %>
<% form_tag session_path do -%>
  <p><%= label_tag :email %></p>
  <p><%= text_field_tag :email %></p>
  <p><%= label_tag :password %></p>
  <p><%= password_field_tag :password %></p>
  <p class='submit'><%= submit_tag 'Sign In' %></p>
<% end -%>
